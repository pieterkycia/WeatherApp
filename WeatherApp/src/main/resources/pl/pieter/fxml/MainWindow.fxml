<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox style="-fx-background: #003d99;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="topBarHBox" alignment="TOP_CENTER">
         <children>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <Label minHeight="-Infinity" minWidth="-Infinity" text="Prognoza" textFill="WHITE">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox>
               <children>
                  <HBox>
                     <children>
                        <Button fx:id="refreshButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#refreshOnAction">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Button>
                        <ComboBox fx:id="countryComboBox" minHeight="-Infinity" minWidth="-Infinity" prefHeight="36.8" prefWidth="150.0" promptText="PaÅ„stwo">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </ComboBox>
                        <TextField fx:id="cityNameTextField" alignment="TOP_LEFT" minHeight="-Infinity" minWidth="-Infinity" prefHeight="36.8" prefWidth="200.0" promptText="Miasto">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </TextField>
                        <Button fx:id="searchButton" alignment="TOP_RIGHT" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#searchOnAction">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER">
         <children>
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="NEVER">
               <content>
                  <VBox fx:id="dataVBox">
                     <children>
                        <VBox />
                        <HBox />
                        <VBox layoutX="10.0" layoutY="10.0" />
                        <VBox layoutX="10.0" layoutY="10.0" />
                        <VBox layoutX="10.0" layoutY="10.0" />
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </HBox>
   </children>
</VBox>
